<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
            max-width: 21cm;
            margin: 0 auto;
            padding: 40px;
            color: #2d3436;
            background: #fff;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
            border-bottom: 1px solid #dfe6e9;
            padding-bottom: 20px;
        }

        h1 {
            font-size: 2.5em;
            margin: 0;
            color: #2d3436;
        }

        h2 {
            font-size: 1.2em;
            color: #636e72;
            font-weight: normal;
            margin: 10px 0;
        }

        .contact-info {
            color: #636e72;
            font-size: 0.9em;
        }

        .section {
            margin: 30px 0;
        }

        .section-title {
            font-size: 1.1em;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: #2d3436;
            margin-bottom: 15px;
        }

        .experience-item {
            margin-bottom: 25px;
        }

        .experience-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            margin-bottom: 5px;
        }

        .company-name {
            font-weight: 500;
        }

        .date-range {
            color: #636e72;
            font-size: 0.9em;
        }

        .skills-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 10px;
            margin-top: 15px;
        }

        .skill-item {
            background: #f1f2f6;
            padding: 8px 15px;
            border-radius: 4px;
            font-size: 0.9em;
            text-align: center;
        }

        ul {
            list-style-type: none;
            padding-left: 0;
        }

        li {
            margin-bottom: 5px;
            position: relative;
            padding-left: 20px;
        }

        li:before {
            content: "•";
            position: absolute;
            left: 0;
            color: #636e72;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{fullName}}</h1>
        <h2>{{position}}</h2>
        <div class="contact-info">
            {{email}} • {{phone}}
        </div>
    </div>

    <div class="section">
        <div class="section-title">Профессиональный опыт</div>
        {{#each workExperience}}
        <div class="experience-item">
            <div class="experience-header">
                <span class="company-name">{{company}} | {{position}}</span>
                <span class="date-range">{{startDate}} - {{endDate}}</span>
            </div>
            <ul>
                {{#each responsibilities}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
        {{/each}}
    </div>

    <div class="section">
        <div class="section-title">Образование</div>
        {{#each education}}
        <div class="experience-item">
            <div class="experience-header">
                <span class="company-name">{{institution}}</span>
                <span class="date-range">{{startDate}} - {{endDate}}</span>
            </div>
            <div>{{degree}} в {{specialization}}</div>
        </div>
        {{/each}}
    </div>

    <div class="section">
        <div class="section-title">Технические навыки</div>
        <div class="skills-grid">
            {{#each skills}}
            <div class="skill-item">{{this}}</div>
            {{/each}}
        </div>
    </div>

    <div class="section">
        <div class="section-title">Языки</div>
        <div class="skills-grid">
            {{#each languages}}
            <div class="skill-item">{{this}}</div>
            {{/each}}
        </div>
    </div>
</body>
</html> 