<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            max-width: 21cm;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        .section {
            margin: 20px 0;
        }
        .experience-item {
            margin-bottom: 20px;
        }
        .skills-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        .skill-item {
            background: #f0f0f0;
            padding: 5px 10px;
            border-radius: 3px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{fullName}}</h1>
        <p>{{position}}</p>
        <p>{{email}} | {{phone}}</p>
    </div>

    <div class="section">
        <h2>Профессиональный опыт</h2>
        {{#each workExperience}}
        <div class="experience-item">
            <h3>{{company}} - {{position}}</h3>
            <p>{{startDate}} - {{endDate}}</p>
            <ul>
                {{#each responsibilities}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
        {{/each}}
    </div>

    <div class="section">
        <h2>Образование</h2>
        {{#each education}}
        <div class="education-item">
            <h3>{{institution}}</h3>
            <p>{{degree}} - {{specialization}}</p>
            <p>{{startDate}} - {{endDate}}</p>
        </div>
        {{/each}}
    </div>

    <div class="section">
        <h2>Навыки</h2>
        <div class="skills-list">
            {{#each skills}}
            <span class="skill-item">{{this}}</span>
            {{/each}}
        </div>
    </div>

    <div class="section">
        <h2>Языки</h2>
        <ul>
            {{#each languages}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
</body>
</html> 